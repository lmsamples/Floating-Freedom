@model FloatingFreedom.Models.ViewModels.CreateCustomerViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Customer.KayakId" class="control-label"></label>
                <select asp-for="Customer.KayakId" class ="form-control" asp-items="@Model.Kayaks"></select>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
				<p><i><b>Note:</b> if you schedule a rental in the future that kayak will be unavailable untill it is returned.</i></p>
                <label asp-for="Customer.RentalDate" class="control-label"></label>
                <input asp-for="Customer.RentalDate" class="form-control" />
                <span asp-validation-for="Customer.RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.ReturnDate" class="control-label"></label>
                <input asp-for="Customer.ReturnDate" class="form-control" />
                <span asp-validation-for="Customer.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
