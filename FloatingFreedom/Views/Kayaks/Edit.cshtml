@model FloatingFreedom.Models.ViewModels.KayakViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Kayak</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Kayak.Id" />
            <div class="form-group">
                <label asp-for="Kayak.KayakTypeId" class="control-label"></label>
                <select asp-for="Kayak.KayakTypeId" class="form-control" asp-items="@Model.KayakTypes"></select>
                <span asp-validation-for="Kayak.KayakTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Kayak.Name" class="control-label"></label>
                <input asp-for="Kayak.Name" class="form-control" />
                <span asp-validation-for="Kayak.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
